                <div class="formDateTime">
                    <div class="formQuestion">
                        <label for="date"><b>Date</b></label>
                        <input type="calendar" id="date" name="date" placeholder="05/09/04">
                    </div>
                    <div class="formQuestion">
                        <label for="time"><b>Time</b></label>
                        {{!-- not sure if this will be edited --}}
                        <select name="time" id="time">
                            <option value="1" {{#if (eq TEMP.time_slot "8:00 - 9:30")}}selected{{/if}}>8:00 - 9:30</option>
                            <option value="2" {{#if (eq TEMP.time_slot "10:00 - 11:30")}}selected{{/if}}>10:00 - 11:30</option>
