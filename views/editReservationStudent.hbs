                            <option value="5" {{#if (eq TEMP.time_slot "16:00 - 17:30")}}selected{{/if}}>16:00 - 17:30</option>
                            <option value="6" {{#if (eq TEMP.time_slot "18:00 - 19:30")}}selected{{/if}}>18:00 - 19:30</option>
                        </select>
                    </div>
                </div>
                <input type="submit" class="submitBtn">
            </form>
